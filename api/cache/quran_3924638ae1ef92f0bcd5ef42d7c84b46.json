            "notes": null,
            "page": "583",
            "surah": "79",
            "text": "Sudah sampaikah kepadamu (Nabi Muhammad) kisah Musa?",
            "theme": null
        },
        {
            "arab": "اِذْ نَادٰىهُ رَبُّهٗ بِالْوَادِ الْمُقَدَّسِ طُوًىۚ",
            "asbab": "0",
            "audio": "https:\/\/cdn.alquran.cloud\/media\/audio\/ayah\/ar.alafasy\/5728",
            "ayah": "16",
            "hizb": "59",
            "id": "5728",
