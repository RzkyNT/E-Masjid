            "asbab": "0",
            "audio": "https:\/\/cdn.alquran.cloud\/media\/audio\/ayah\/ar.alafasy\/5729",
            "ayah": "17",
            "hizb": "59",
            "id": "5729",
            "juz": "30",
            "latin": "Iżhab ilā fir‘auna innahū ṭagā.",
            "notes": null,
            "page": "584",
            "surah": "79",
            "text": "“Pergilah engkau kepada Fir‘aun! Sesungguhnya dia telah melampaui batas.",
            "theme": null
        },
        {
