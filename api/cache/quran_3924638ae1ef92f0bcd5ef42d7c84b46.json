            "ayah": "25",
            "hizb": "59",
            "id": "5737",
            "juz": "30",
            "latin": "Fa akhażahullāhu nakālal-ākhirati wal-ūlā.",
            "notes": null,
            "page": "584",
            "surah": "79",
            "text": "Maka, Allah menghukumnya dengan azab di akhirat dan (siksaan) di dunia.",
            "theme": null
        },
        {
